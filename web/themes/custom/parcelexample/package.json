{
  "name": "parcel-theme",
  "version": "0.1.0",
  "description": "An example of Parcel usage.",
  "private": true,
  "scripts": {
    "build:js": "parcel build './src/js/**/*.js' --dist-dir './dist/js'",
    "build:scss": "parcel build './src/scss/**/*.scss' --dist-dir './dist/css'",
    "build": "npm run build:js && npm run build:scss",
    "watch:js": "parcel watch './src/js/**/*.js' --dist-dir './dist/js' --no-hmr",
    "watch:scss": "parcel watch './src/scss/**/*.scss' --dist-dir './dist/css' --no-hmr",
    "watch": "npm run watch:js & npm run watch:scss"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "parcel": "^2.0.0-beta.2"
  }
}
